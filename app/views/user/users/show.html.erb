  <div><%= message %></div>
<% end %>
<p id="notice"></p>

<div class="container px-5 px-sm-0">
    <div class="row">
        <div class= "col-md-3">
         
        <!--部分テンプレート挿入部分-->
        <%= render 'layouts/template', user: @user, sneaker: @sneaker %>
        <!--部分テンプレート挿入部分-->
       
        
        </div>
    </table>
  
  <!--画面右側-->
    <div class="col-md-8 offset-md-1">
        <h2>Sneakers</h2>
        <table class='table table-hover table-inverse'>
            <thead>
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
                <% @sneakers.each do |book| %>
                <tr>
                    <!--プロフィール画像のリンク-->
                    <td><%= link_to user_path(book.user_id) do %>
                    <%#= image_tag @user.get_profile_image(100,100) %></td>
                    <% end %></td>
                    <!--TitleとOpinionの欄-->
                    <td><%=link_to sneaker.title, sneaker_path(book.id)%></td>
                    <td><%= sneaker.body %></td>
                </tr>
                 <% end %>
            </tbody>
        </table>
    </div>
    </div>
</div>
   