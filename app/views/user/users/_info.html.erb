  <tr class="color">
	  <th class="table-dark">Introduction</th>
	  <th class="table-dark"><%= user.introduction %></th>
  </tr>
  <tr class="color">
    <th class="table-dark">Follows</th>
    <th class="table-dark"><%= link_to user.followings.count, user_followings_path(user) %></th>
  </tr>
  <tr class="color">
    <th class="table-dark">Followers</th>
    <th class="table-dark"><%= link_to user.followers.count, user_followers_path(user) %></th>
  </tr>
</table>
