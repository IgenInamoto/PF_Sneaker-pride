<h2>Results</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがSneakerの時) -->
    <tbody>
      <% @sneakers.each do |sneaker| %>
        <tr>
          <td> <%= image_tag sneaker.image, width: '50%', height: '50%' %></td>
          <td><%= sneaker.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>