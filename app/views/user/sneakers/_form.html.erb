<%= form_with model:sneaker,local:true do |f| %>
  <div class="form-group">
    <%= f.label :Image %>
    <%= f.file_field :image, class: 'form-control sneaker_image' %>
  </div>
  <div class="form-group">
    <%= f.label :Explanation %>
    <%= f.text_area :body, class: 'form-control sneaker_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
