<% end %>
<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class= "col-md-3">
      <!--部分テンプレート挿入部分-->
      <%= render 'layouts/template', user: @user, sneaker: @sneaker_new %>　　　
      <!--部分テンプレート挿入部分-->
      </div>  
 
  
  
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class='table' >
          <tbody>
              <tr>
              <td>
                  <%#= image_tag @user.get_profile_image(100,100) %>
                  <%= link_to user_path(@sneaker.user.id) do %>
                  <nav>
                  <%= @sneaker.user.name %>
                  </nav>
                  <% end %>
              
                  <td><%= link_to @sneaker.title %></td>
