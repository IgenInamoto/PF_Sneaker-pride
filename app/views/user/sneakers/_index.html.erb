<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Image</th>
      <th>Explanation </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% sneakers.each do |sneaker| %>
      <tr>
        <td><%= link_to(sneaker.user) do %>
          <%= image_tag sneaker.user.get_profile_image, size:'150x150' %>
          <% end %>
        </td>
        <td><%= link_to sneaker, class: "sneaker_#{sneaker.id}" do %>
          <%= image_tag sneaker.image, width: '100%', height: '100%' %>
          <% end %>
        </td>
        <td><%= sneaker.body %></td>
        <td class=<%#= "favorite-" + book.id.to_s %> >
            <%#= render "favorites/btn", book: book %>
        </td>
        <td><%#= render "book_comments/counter", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>