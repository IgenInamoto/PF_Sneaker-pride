<table class='table'>
  <thead>
    <tr class="table-outline-secondary">
      <th class="color"><strong>Profile-Image</strong></th>
      <th class="color"><strong>Image</strong></th>
      <th class="color"><strong>Explanation</strong></th>
      <th class="color"><strong>Favorite</strong></th>
      <th class="color"><strong>Comment</strong></th>
    </tr>
  </thead>
  <tbody class='table table-dark'>
    <% sneakers.each do |sneaker| %>
      <tr class="color col-2">
        <td class="table-dark"><%= link_to(sneaker.user) do %>
          <%= image_tag sneaker.user.get_profile_image, class: "rounded-circle", size:'150x150' %>
          <% end %>
        </td>
        <td class="table-dark col-3"width="500" height="300"><%= link_to sneaker, class: "sneaker_#{sneaker.id}" do %>
          <%= image_tag sneaker.image, width: '100%', height: '100%' %>
          <% end %>
        </td>
        <td class="table-dark col-4"><%= sneaker.body %></td>
        <td class=<%= "favorite-" + sneaker.id.to_s %>>
            <%= render "user/favorites/favorite_btn", sneaker: sneaker %>
        </td>
        <td class="sneaker-comments-counter table-dark">
          <%= render "user/sneaker_comments/counter", sneaker: sneaker %>
        </td>
      </tr>
    <% end %>
    <%= paginate sneakers %>
  </tbody>
</table>