<!--投稿された投稿の一覧ページ-->
<% flash.each do |message_type, message| %>
  <div><%= message %></div>
<% end %>
<p id="notice"></p>
    <div class="container px-5 px-sm-0">
     <div id="error_explanation">
    
        <% if @sneaker.errors.any? %>
        <h3><%= @sneaker.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
        <% @sneaker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
        <% end %>
        
        <div class="row">
        <div class= "col-md-3">
            
    <!--部分テンプレート挿入部分-->
    <%= render 'layouts/template', user: @user, sneaker: @sneaker %>
    <!--部分テンプレート挿入部分-->
    
    </div>
    
    <!--ページ右側-->
    <div class= "col-md-8 offset-md-1">
      <table class='table table-hover table-inverse'>
          <h2>Sneaker</h2>
          <thead>
          <tr>
          <th> </th>
          <th>Title</th>
          <th>Explanation</th>
          <th colspan="3"></th>
          </tr>
          </thead>
            <tbody>
               
              <% @sneakers.each do |sneaker| %>
              <tr>
              <td>
                <%= link_to user_path(sneaker.user_id) do %>
               <%= image_tag @user.get_profile_image(100,100) %>
              <% end %>
              </td>
              <td><%=link_to sneaker.title, sneaker_path(sneaker.id)%></td>
              <td><%= sneaker.body %></td>
              <!--いいね部分ここから-->
              <!--<td id="favorite_buttons_<%#= sneaker.id %>">-->
              <%#= render "favorites/favorite", sneaker: sneaker %>
              </td>
              <!--いいね部分ここまで-->
              <!--コメント数表示-->
              <!--<td>コメント数: <%#= sneaker.sneaker_comments.count %></td>-->
              <!--コメント数表示ここまで-->
              </tr>
              <% end %>
            </tbody>
      </table>
    </div>

</div>