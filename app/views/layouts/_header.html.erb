
<header>
     <nav class="navbar navbar-expand-lg" style="background-color:#1E90FF;">
          <div class="container-fluid">
          <th><%= link_to  image_tag('Logo2.png', size: '100x100'), root_path, class:'navbar-brand' %></th>
          <h1 class="text-center mt-0" style="font-family: 'Sacramento', cursive;">Sneaker-Pride</h1>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            
            <!--検索窓-->
            <%= render 'user/users/search'%>
    
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to user_path(current_user.id), class:'nav-link text-light' do %>
              <i class="fa-solid fa-house-user fa-bounce"></i>Home
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to users_path, class:'nav-link text-light' do %>
              <i class="fa-solid fa-users fa-bounce"></i>Users
            <% end %>
          </li>
          <li class="nav-item">
          <%= link_to sneakers_path, class:'nav-link text-light' do %>
              <i class="fa-solid fa-shoe-prints fa-bounce"></i>Sneakers
          <% end %>
          </li>
          <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete, class:'nav-link text-light' do %>
              <i class="fa-sharp fa-solid fa-arrow-right-from-bracket fa-fade"></i>Log out
              <% end %>
          </li>
          
          <!--管理者ログイン-->
           <% elsif admin_signed_in? %>
          <li>
            <%= link_to  admin_root_path, class:'nav-link text-dark' do %>
            <i class="fa-solid fa-house-user fa-bounce"></i>Home
            <% end %>
          </li>
          <li>
            <%= link_to admin_users_path, class:'nav-link text-dark' do %>
            <i class="fas fa-users"></i>Users
            <% end %>
          </li>
           <li>
          <%= link_to admin_sneakers_path, class:'nav-link text-dark' do %>
              <i class="fa-solid fa-shoe-prints fa-bounce"></i>Sneakers
          <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete, class:'nav-link text-dark' do %>
             <i class="fas fa-user-slash"></i>ログアウト
            <% end %>
          </li>
          
          <!--未ログイン-->
        <% else %>
          <li class="nav-item">
            <%= link_to root_path, class:'nav-link text-light' do %>
             <i class="fa-solid fa-house-chimney"></i>Home
              <% end %>
          </li>
          <li class="nav-item">
             <%= link_to about_path, class:'nav-link text-light' do %>
              <i class="fas fa-link"></i>About
              <% end %>
          </li>
          <li class="nav-item">
             <%= link_to  new_user_registration_path, class:'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i>Sign up
              <% end %>
          </li>
          <li class="nav-item">
            <%= link_to  new_user_session_path, class:'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i>Log in
              <% end %>
          </li>
        <% end %>
      </div>
      </div>
    </nav>
</header>