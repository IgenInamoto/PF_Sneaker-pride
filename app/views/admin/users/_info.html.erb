<table class='table'>
    <tr>
    <%= image_tag user.get_profile_image, class: "rounded-circle", size:'100x100' %>
    </tr>
    <tr class="color">
  	  <th class="table-dark">name</th>
  	  <th class="table-dark"><%= user.name %></th>
    </tr>
    <tr class="color">
  	  <th class="table-dark">introduction</th>
  	  <th class="table-dark"><%= user.introduction %></th>
    </tr>
    <tr class="color">
      <th class="table-dark">follows</th>
      <th class="table-dark"><%= link_to user.followings.count, user_followings_path(user) %></th>
    </tr>
    <tr class="color">
      <th class="table-dark">followers</th>
      <th class="table-dark"><%= link_to user.followers.count, user_followers_path(user) %></th>
    </tr>
</table>
  <tr>
  <%= link_to 'Destroy',  admin_user_path(user.id), data: { confirm: '本当に消しますか？' },  method: :delete, class: "btn btn-danger" %>
  </tr>