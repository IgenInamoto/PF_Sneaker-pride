<div class='container px-5 px-sm-0'>
  <div class='row'>
    <table class='table'>
      <thead>
        <tr>
           <th class="table-warning"><strong>Profile-Image</strong></th>
          <th class="table-warning"><strong>User Name</strong></th>
          <th class="table-warning"><strong>Go to user profile</strong></th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td><%= link_to admin_user_path(user) do %>
              <%= image_tag user.get_profile_image, class: "rounded-circle", size: '100x100' %>
              <% end %>
              </td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', admin_user_path(user), class: "user_#{user.id}" %></td>
          </tr>
        <% end %>
         <%= paginate users %>
      </tbody>
    </table>
    </div>
</div>